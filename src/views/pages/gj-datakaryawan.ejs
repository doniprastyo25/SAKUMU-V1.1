<div class="card">
    <div class="card-header mb-0 pb-0">
        <%- include('../partials/gj-header'); %>
    </div>
    <div class="card-body">
        <div class="container-fluid p-0">    
            <div class="row">
                <div class="col">
                    <h5><%= title %></h5>
                    <h6 class="fw-normal"><%= dess %></h6>
                </div>
                <div class="col-sm text-end me-3">    
                    <form action="#" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm rounded-start" placeholder="Pencarian" aria-label="Pencarian" id="search" name="search">
                            <button class="btn btn-primary btn-sm rounded-end pe-2" type="submit"><i class="bi bi-search me-2"></i>Cari</button>
                        </div>
                    </form>  
                    <div class="mt-3">
                        <button type="button" class="btn btn-info badge rounded-pill fw-normal px-3" data-bs-toggle="modal" data-bs-target="#tambahkaryawan"><i class="bi bi-plus-circle-fill me-2"></i>Tambah Data</button>
                        <%- include('../modals/in-karyawan') %> 
                        <a href="#" class="btn btn-secondary badge rounded-pill fw-normal px-3 ms-2"><i class="bi bi-list-ul me-2"></i>Tampilkan semua</a>
                        <button type="button" class="btn btn-secondary badge rounded-pill fw-normal px-3 ms-2" data-bs-toggle="modal" data-bs-target="#laporanout"><i class="bi bi-printer-fill me-2"></i>cetak laporan</button>   
                    </div>  
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <div class="btn-group dropend">
                        <button type="button" class="btn btn-sm btn-secondary dropdown-toggle btn-warning fw-bold" data-bs-toggle="dropdown" aria-expanded="false">
                          Keterangan
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item disabled fw-bold" href="#"></a></li>
                        </ul>
                      </div>
                </div>
                <div class="col-sm-4 text-end me-3">
                    <form method="get" action="#">
                        <div class="row">
                            <div class="col-sm-3">
                                Filter :
                            </div>
                            <div class="col-sm">
                                <div class="input-group">
                                    <input type="date" class="form-control form-control-sm" id="date" name="date" value="#" required>
                                    <button type="submit" class="btn btn-primary btn-sm">Terapkan</button>
                                </div>
                            </div>
                        </div>    
                    </form>
                </div>
            </div>
            <!-- diisi alert -->
            <% if(succ.length !== 0){%>
                <div class="alert alert-success p-2 mt-2" role="alert"><%= succ %></div>
            <% } %> 
            <% if(err.length !== 0){%>
                <div class="alert alert-danger p-2 mt-2" role="alert"><%= err %></div>
            <% } %> 
            <table class="table table-sm table-bordered table-striped mt-3">
                <thead>
                    <tr>
                      <th class="text-center" scope="col" style="width: 5%;">ID</th>
                      <th class="text-center" scope="col" style="width: 30%;">NAMA</th>
                      <th class="text-center" scope="col" style="width: 20%;">JABATAN</th>
                      <th class="text-center" scope="col" style="width: 15%;">Aksi</th>
                    </tr>
                </thead>
                <tbody> 
                    <% for( let i = 0; i < karyawan.length; i++ ) { %>
                        <tr>
                            <!-- <th class="text-center" scope="row"><%= karyawan[i].id %> </th> -->
                            <!-- <th class="text-center" scope="row"><%= karyawan[i].kj %> </th> -->
                            <th class="text-center" scope="row"><%= i + 1 %> </th>
                            <td><%= karyawan[i].nama %> </td>
                            <td><%= karyawan[i].jabatan %> </td>
                            <td class="text-center">
                                <button type="button" class="btn badge btn-success fw-normal me-1" data-bs-toggle="modal" data-bs-target="#detKaryawan<%= karyawan[i].id %>"><i class="bi bi-info-circle"></i></button>
                                <%- include('../modals/det-karyawan',{
                                    data: karyawan[i],
                                }) %> 
                                <button type="button" class="btn badge btn-primary fw-normal" data-bs-toggle="modal" data-bs-target="#editKaryawan<%= karyawan[i].id %>"><i class="bi bi-pencil-square"></i></button>
                                <%- include('../modals/edit-karyawan',{
                                    data: karyawan[i],
                                }) %> 
                                <button type="button" class="btn badge btn-danger fw-normal" data-bs-toggle="modal" data-bs-target="#delKaryawan<%= karyawan[i].id %> "><i class="bi bi-trash"></i></button>
                                <%- include('../modals/del-karyawan',{
                                    data: karyawan[i],
                                }) %> 
                            </td>
                        </tr>             
                    <% } %>
                </tbody>    
            </table>
        </div>        
    </div>
</div>
