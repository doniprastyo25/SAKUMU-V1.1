<div class="card">
    <div class="card-header mb-0 pb-0">
        <%- include('../partials/setting-header'); %>
    </div>
    <div class="card-body">
        <div class="container-fluid p-0 mt-3">
            <div class="card mt-3">
                <div class="row">
                    <div class="col col-set">
                        <div class="col-sm">
                            <h6 class="mb-3 ms-2"><i class="bi bi-cloud-arrow-up-fill"></i> Back-Up</h6>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <a href="/settings/backupdb" class="btn btn-primary btn-lg"><i class="bi bi-cloud-arrow-up-fill"></i></a>
                        </div>
                    </div>
                    <div class="col col-set">                        
                            <div class="row">
                                <div class="col-sm">
                                    <h6 class="mb-3"><i class="bi bi-cloud-arrow-down-fill"></i> Restore</h6>
                                </div>
                            </div>                         
                            <div class="col-sm">
                                <div class="d-grid gap-2 col-6 mx-auto">
                                    <button type="button" class="btn btn-primary fw-normal me-1 btn-lg" data-bs-toggle="modal" data-bs-target="#alertbackup"><i class="bi bi-cloud-arrow-down-fill"></i></button>
                                    <%- include('../modals/alert-backup') %> 
                                </div>
                            </div> 
                    </div>
                </div>
            </div>
        </div>
        <% if (backsucc.length !== 0) { %>
            <div class="alert alert-success mt-2" role="alert"><%= backsucc %></div>
        <% } %>
    </div>
</div>